<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                               http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>controller.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>
    <!-- Appointment Servlet -->
    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>controller.AppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/AppointmentServlet</url-pattern>
    </servlet-mapping>
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <!-- Cancel Appointment Servlet -->
    <servlet>
        <servlet-name>CancelAppointmentServlet</servlet-name>
        <servlet-class>controller.CancelAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CancelAppointmentServlet</servlet-name>
        <url-pattern>/CancelAppointmentServlet</url-pattern>
    </servlet-mapping>
    <!-- Counselor Servlet -->
    <servlet>
        <servlet-name>CounselorServlet</servlet-name>
        <servlet-class>controller.CounselorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CounselorServlet</servlet-name>
        <url-pattern>/CounselorServlet</url-pattern>
    </servlet-mapping>
    <!-- Start Consultation Servlet -->
    <servlet>
        <servlet-name>StartConsultationServlet</servlet-name>
        <servlet-class>controller.StartConsultationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartConsultationServlet</servlet-name>
        <url-pattern>/StartConsultationServlet</url-pattern>
    </servlet-mapping>
    <!-- View Appointment Record Servlet -->
    <servlet>
        <servlet-name>ViewAppointmentRecordServlet</servlet-name>
        <servlet-class>controller.ViewAppointmentRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAppointmentRecordServlet</servlet-name>
        <url-pattern>/ViewAppointmentRecordServlet</url-pattern>
    </servlet-mapping>
 <servlet>
        <servlet-name>ViewRecordServlet</servlet-name>
        <servlet-class>controller.ViewRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewRecordServlet</servlet-name>
        <url-pattern>/ViewRecordServlet</url-pattern>
    </servlet-mapping>
    <!-- Delete Appointment Servlet -->
    <servlet>
        <servlet-name>DeleteAppointmentServlet</servlet-name>
        <servlet-class>controller.DeleteAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAppointmentServlet</servlet-name>
        <url-pattern>/DeleteAppointmentServlet</url-pattern>
    </servlet-mapping>
    <!-- Student Management Servlets -->
    <servlet>
        <servlet-name>StudentListServlet</servlet-name>
        <servlet-class>controller.StudentListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentListServlet</servlet-name>
        <url-pattern>/StudentListServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentEditServlet</servlet-name>
        <servlet-class>controller.StudentEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentEditServlet</servlet-name>
        <url-pattern>/StudentEditServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentDeleteServlet</servlet-name>
        <servlet-class>controller.StudentDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDeleteServlet</servlet-name>
        <url-pattern>/StudentDeleteServlet</url-pattern>
    </servlet-mapping>
    <!-- Session Timeout -->
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/UpdateProfileServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
